@{
}

<div class="row g-3">
    <div class="col">
        <label for="tagsList" class="form-label">Agrega un tag a tu artículo!</label>
        <input class="form-control" list="tagOptions" id="tagsList" placeholder="Ej.: Receta, Postre,...">
        <datalist id="tagOptions">
            @foreach (Tag tagOption in ViewBag.Tags)
            {
                <option value="@tagOption.TagName" />
            }
            <option value="San Francisco" />
            <option value="New York" />
            <option value="Seattle" />
            <option value="Los Angeles" />
            <option value="Chicago" />
        </datalist>
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-primary mb-3">Agregar</button>
    </div>
</div>