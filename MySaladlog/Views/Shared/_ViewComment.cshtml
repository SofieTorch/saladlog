@model IEnumerable<MySaladlog.Models.Comment>
<head>
    <link href="~/wwwroot/css/comment.css" />
</head>

Comentarios: @Model.Count()
<div class="mt-2">
    @foreach (var item in Model)
    {
        <div class="p-3 mb-2 bg-light rounded">
            <b>@item.IdUserNavigation.FirstName @item.IdUserNavigation.LastName</b>
            <div>@item.Comment1 <br /> <i>@item.DateComment</i></div>
        </div>
    }
</div>

