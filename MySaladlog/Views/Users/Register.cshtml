@model MySaladlog.Models.User
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LayoutBasic.cshtml";
}

<head>
    <link href="/css/register.css" rel="stylesheet" />
</head>


<div class="containerRegister">
    <div class="container">
        <div class="title">Registration</div>
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="user-details">


                <div class="input-boxs">
                    <label asp-for="FirstName" class="details">Nombres</label>
                    <input asp-for="FirstName" type="text" placeholder="Juan Rafael">
                    <span asp-validation-for="FirstName" style="color:red" class="text-danger"></span>
                </div>
                <div class="input-boxs">
                    <span class="details">Apellidos</span>
                    <input asp-for="LastName" type="text" placeholder="Perez Morales">
                    <span asp-validation-for="LastName" style="color:red" class="text-danger"></span>
                </div>
                <div class="input-boxs">
                    <span class="details">Nombre de Usuario</span>
                    <input asp-for="UserName" type="text" placeholder="JuanRafa77">
                    <span asp-validation-for="UserName" style="color:red" class="text-danger"></span>
                </div>
                <div class="input-boxs">
                    <span class="details">Correo Electronico</span>
                    <input asp-for="Email" type="text" placeholder="juanperez23@gmail.com">
                    <span asp-validation-for="Email" style="color:red" class="text-danger"></span>
                </div>
                <div class="input-boxs">
                    <span class="details">Contraseña</span>
                    <input asp-for="Password" type="password" placeholder="Contraseña">
                    <span asp-validation-for="Password" style="color:red" class="text-danger"></span>
                </div>
                <div class="input-boxs">
                    <span class="details">Confirmar Contraseña</span>
                    <input asp-for="ConfirmPassword" type="password" placeholder="Contraseña">
                    <span asp-validation-for="ConfirmPassword" style="color:red" class="text-danger"></span>
                </div>
            </div>

            <div class="button">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div class="">
                <span class="details">
                    Ya tiene una cuenta?
                    <a asp-action="Login">Iniciar Sesion</a>
                </span>
            </div>

        </form>
        @section Scripts{
            @{
                <partial name="_ValidationScriptsPartial" />
            }
        }

    </div>
</div>





